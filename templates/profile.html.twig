{% extends 'base.html.twig' %}

{% block title %}NAO - Profil{% endblock %}

{% block body %}
    <div class="row">
        <div class="tabs-vertical">
            <div class="col s3">
                <ul class="tabs">
                    <li class="tab">
                        <a class="waves-effect waves-light btn-large" href="#Dashboard"><i class="material-icons" style="font-size: 4em">dashboard</i></a>
                    </li>
                    <li class="tab">
                        <a class="waves-effect waves-light btn-large" href="#Profil"><i class="material-icons" style="font-size: 4em">contact_mail</i></a>
                    </li>
                    <li class="tab">
                        <a class="waves-effect waves-light btn-large" href="#Observations"><img src="{{ asset('/img/icons/Very-Basic-Binoculars-icon.png' | imagine_filter('icon_tab')) }}"></a>
                    </li>
                    <li class="tab">
                        <a class="waves-effect waves-light btn-large" href="#Posts"><i class="material-icons" style="font-size: 4em">assignment</i></a>
                    </li>
                </ul>
            </div>
            <div class="col s9">
                <div id="Dashboard" class="tab-content">

                    <b>Dashboard</b>

                </div>
                <div id="Profil" class="tab-content">

                    <div class="row" id="loginPanel">
                        <div class="card-panel grey lighten-4 hoverable col s10 offset-s1">
                            <div class="row" style="padding-top: 6%; padding-bottom: 3%">

                                <div class="row">
                                    <div class="col s12 center">
                                        <img src="{% if app.user.img %}{% if app.user.img matches '/^https?:/' %}{{ app.user.img | replace({'sz=50':'sz=256'}) }}{% else %}{{ app.user.img | imagine_filter('profile_thumbnail') }}{% endif %}{% else %}{{ '#' }}{% endif %}" alt="" class="responsive-img">
                                    </div>
                                </div>


                                {{ form_start(form) }}

                                <div class="row">
                                    <div class="file-field input-field col s10 offset-s1">
                                        <div class="btn">
                                            <span>Envoyer un fichier</span>
                                            {{ form_widget(form.img) }}
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s10 offset-s1">
                                        <input disabled value="{{ app.user.email }}" id="disabled" type="text" class="validate">
                                        <label for="disabled">Email</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s10 offset-s1">
                                        {{ form_widget(form.nickname, {
                                            'attr':{
                                                'class':'validate',
                                                'value':app.user.nickname
                                            }
                                        }) }}
                                        {{ form_label(form.nickname) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field offset-s1 col s5">
                                        {{ form_widget(form.firstname, {
                                            'attr':{
                                                'class':'validate',
                                                'value':app.user.firstname
                                            }
                                        }) }}
                                        {{ form_label(form.firstname) }}
                                    </div>
                                    <div class="input-field col s5">
                                        {{ form_widget(form.lastname, {
                                            'attr':{
                                                'class':'validate',
                                                'value':app.user.lastname
                                            }
                                        }) }}
                                        {{ form_label(form.lastname) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s4 offset-s4 center">
                                        <button class="btn waves-effect waves-light cyan lighten-2 black-text" type="submit" name="action">Modifier
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
                <div id="Observations" class="tab-content" style="background-color: #f5f5f5">

                    <ul class="collapsible">
                        {% for observe in observes %}
                            <li>
                                <div class="collapsible-header js-taxref" data-taxref="{{ path('taxref', {id: observe.ref.id}) }}"><i class="material-icons">place</i></div>
                                <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                            </li>
                        {% endfor %}
                    </ul>

                </div>
                <div id="Posts" class="tab-content">
                    <b>POSTS</b>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let spinner = '<div class="preloader-wrapper small active">' +
            '<div class="spinner-layer spinner-green-only">' +
            '<div class="circle-clipper left">' +
            '<div class="circle"></div>' +
            '</div><div class="gap-patch">' +
            '<div class="circle"></div>' +
            '</div><div class="circle-clipper right">' +
            '<div class="circle"></div>' +
            '</div>' +
            '</div>' +
            '</div>';

        $(document).ready(function() {
            $('.tabs').tabs();

            {% for flash in app.flashes('profile') %}
            $(function () {
                M.toast({html: '<span>{{ flash }}</span>'});
            });
            {% endfor %}

            $('.js-taxref').each(function () {
                let $taxref = $(this);
                $(this).append(spinner);
                let taxrefData = $(this).data('taxref');

                $.getJSON(taxrefData, function (data) {
                    $.each(data, function (key, val) {
                        $taxref.children('.preloader-wrapper').remove();
                        if ('nomVern' === key && null !== val) {
                            $taxref.append('<span>' + val + '</span>')
                        }
                    })
                })


            // $('.js-taxref').each(function () {
            //     console.log(this);
