{% extends 'base.html.twig' %}

{% block title %}NAO - Modify Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modifyPassword.css') }}">
{% endblock %}

{% block body %}

    {% for flash in app.flashes('notif') %}
        <div class="row">
            <div class="card red darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Erreur</span>
                    <p>{{ flash }}</p>
                </div>
                <div class="card-action">
                    <a href="#" onclick="dismiss()">Fermer</a>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="row" id="loginPanel">
        <div class="card-panel grey lighten-4 hoverable col s8 offset-s2">
            <div class="row" style="padding-top: 6%; padding-bottom: 3%">

                <div class="row">
                    <div class="col s10 offset-s1 center">

                        <p>Veuillez saisir votre nouveau mot de passe</p>

                        {{ form_start(form) }}

                        <div class="input-field">
                            <i class="material-icons prefix">mode_edit</i>
                            {{ form_widget(form.password.first, {
                                'attr':{
                                    'class':'validate'
                                }
                            }) }}
                            {{ form_label(form.password.first) }}
                        </div>

                        <div class="input-field">
                            <i class="material-icons prefix">mode_edit</i>
                            {{ form_widget(form.password.second, {
                                'attr':{
                                    'class':'validate'
                                }
                            }) }}
                            {{ form_label(form.password.second) }}
                        </div>
                        <button class="btn waves-effect waves-light cyan lighten-2 black-text" type="submit" name="action">S'enregistrer
                            <i class="material-icons right">send</i>
                        </button>
                        {{ form_end(form) }}

                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        M.updateTextFields();
        function dismiss() {
            let alert = document.getElementById("alert");
            alert.remove();
        }

    </script>
{% endblock %}
