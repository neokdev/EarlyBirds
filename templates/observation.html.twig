{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <link rel="stylesheet" href="{{ asset('css/addObserve.css') }}">
{% endblock %}

{% block title %}
    Saisir ses observations d'oiseaux, devenir citoyen scientifique
{% endblock %}

{% block metadesc %}Et si vos observations contribuaient à protéger les espèces qui vous
    entourent ? C'est ce que vous propose NAO en participant au programme d'étude en cours{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
        <div class="col l12 m12 s12" id="subHeader">
            <div class=" col l2 m2 s2">
                <p id="slogan">
                    Nos amis les oiseaux
                </p>
            </div>

            <div class="col m8 s12" id="header">
                <h1 class="col m10 offset-m1 s12 header_text">
                    <span id="header_text_bold">Communiquez vos
                    observations</span><br><br>
                    Devenez un acteur éco citoyen et
                    contribuez à préserver la
                    biodiversité.<br>
                    <span id="header_text_light">Participer à
                    notre
                    programme
                    d'étude mis
                    en place en partenariat
                    avec le Muséum national d'Histoire Naturelle.
                    </span>
                </h1>
            </div>
        </div>

        <div class="col m10 offset-m1 s12">
            <div class="row">
                <div id="mapid" class="col s12 m6"></div>
                <div id="form" class="col s12  m6">

                    <div class="input-field col l10 offset-l1 s12 m12">
                        <span class="label" id="label1">Oiseau observé</span>
                        {{ form_widget((form.ref)) }}
                        <span class="form_errors">{{ form_errors(form.ref) }}</span>
                    </div>

                    <div class="input-field col l10 offset-l1 s12 m12">
                        <span class="label">Longitude</span>
                        {{ form_widget(form.longitude) }}
                        <span class="form_errors">{{ form_errors(form.longitude) }}</span>
                    </div>

                    <div class="input-field col l10 offset-l1 s12 m12">
                        <span class="label">Latitude</span>
                        {{ form_widget(form.latitude) }}
                        <span class="form_errors">{{ form_errors(form.latitude) }}</span>
                    </div>

                    <div class="input-field col l10 offset-l1 s12 m12">
                        <span class="label">Date</span>
                        {{ form_widget(form.obsDate) }}
                        <span class="form_errors">{{ form_errors(form.obsDate) }}</span>
                    </div>

                    <div class="input-field col l10 offset-l1 s12 m12">
                        <span class="label">Commentaire</span>
                        {{ form_widget(form.description) }}
                        <span class="form_errors">{{ form_errors(form.description) }}</span>
                    </div>

                    <div class="file-field input-field col l8 offset-l2 m12 s12" id="divUpBtn">
                        <div>
                            <span class="form_errors" id="error-img">
                                {{ form_errors(form.img)}}
                            </span>
                        </div>
                        <div class="btn" id="uplBtn">
                            <span>Télécharger une photo</span>
                            {{ form_widget(form.img) }}
                        </div>
                        <div class="file-path-wrapper">
                            <input class="valid_observe_img file-path validate" type="text"/>
                        </div>

                    </div>

                    <div class="input-field col l8 offset-l2 m12 s12" id="divSubBtn">
                        <button id="submitBtn" class="btn waves-effect waves-light col s10"
                                type="submit">
                            Validez l'observation
                        </button>
                    </div>

                    <div id="mes1" class="input-field col m8 offset-m2 message">
                        {% for message in app.flashes('observe') %}
                            <div class="flash-observe">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="input-field col m10 offset-m1 message">
                        {% for message in app.flashes('notice') %}
                            <img id="notice_decoration" src="{{ asset('/img/vector/polygon.png') }}"/>
                            <div class="flash-notice">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row  hide-on-med-and-down">
            <div class="col m3" id="citation">
                “ Juste là où<br>
                vous êtes est le<br>
                bon endroit pour <br>commencer”
                <br><span id="little_text">Pema Chödrön</span>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
            src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin="">
    </script>
    <script type="text/javascript" src="{{ asset('js/observe.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/observe_validation_input.js') }}"></script>
{% endblock %}
